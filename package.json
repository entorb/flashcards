{
  "name": "@flashcards/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.2.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" --parallel dev",
    "dev:1x1": "pnpm --filter 1x1 dev",
    "dev:voc": "pnpm --filter voc dev",
    "prebuild": "pnpm types",
    "build": "pnpm --filter \"./apps/*\" build",
    "build:1x1": "pnpm --filter 1x1 build",
    "build:voc": "pnpm --filter voc build",
    "preview:all": "pnpm --filter \"./apps/*\" --parallel preview",
    "preview:1x1": "pnpm --filter 1x1 preview",
    "preview:voc": "pnpm --filter voc preview",
    "types": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" types",
    "format": "prettier --cache --write --ignore-path .prettierignore \"**/*.{html,ts,json,md,vue,js,tsx,jsx}\"",
    "lint": "eslint . --cache --fix --ignore-pattern .gitignore",
    "test": "pnpm --filter \"./apps/*\" test",
    "test:unit": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test:unit",
    "test:watch": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test:unit",
    "test:cov": "pnpm --filter \"./apps/*\" --filter \"./packages/*\" test:cov",
    "cy:open:1x1": "pnpm --filter 1x1 cy:open",
    "cy:open:voc": "pnpm --filter voc cy:open",
    "cy:run": "pnpm --filter \"./apps/*\" cy:run",
    "cy:run:1x1": "pnpm --filter 1x1 cy:run",
    "cy:run:voc": "pnpm --filter voc cy:run",
    "spell": "cspell --cache --quiet \"**/*.{txt,md,html,js,ts,vue,json,yml,py}\"",
    "check": "run-p format lint types spell test",
    "find-unused": "node ./scripts/find-unused.js",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist",
    "clean:cache": "rm -rf .cache apps/*/.cache packages/*/.cache apps/*/.eslintcache packages/*/.eslintcache coverage apps/*/coverage packages/*/coverage"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.10.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^4.0.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "cspell": "^9.2.2",
    "cypress": "^15.5.0",
    "eslint": "^9.38.0",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "unplugin-vue-router": "^0.16.0",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^4.0.4",
    "vue-tsc": "^2.2.12"
  }
}
