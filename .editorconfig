# EditorConfig is awesome: https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, Vue, CSS, JSON, YAML
[*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue,css,scss,sass,less,styl,json,yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 100

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

# Python files (if any)
[*.py]
indent_style = space
indent_size = 4
